<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pressure_history_list_margin"
        android:paddingLeft="@dimen/pressure_history_list_margin"
        android:paddingRight="@dimen/pressure_history_list_margin" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/pressure_history_trend_high"
            android:background="@android:color/white"
            android:gravity="center" >

            <com.medzone.cloud.comp.widget.DateSwitchView
                android:id="@+id/date_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dateStep="month"
                app:textSize="@dimen/font_pressure_history_list_biggest"
                app:timeFormat="@string/format_data" >
            </com.medzone.cloud.comp.widget.DateSwitchView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/oxygen_history_trend_month_chart_heigh"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/oxygen_history_trend_oxygen_line_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/oxygen_history_trend_heart_line_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/oxygen_history_trend_month_view_margin_top" >

            <TextView
                android:id="@+id/examples_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/detectionhistory_ic_normal"
                android:text="@string/blood_oxygen"
                android:textSize="@dimen/font_measure_result_details_history_trend_text"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/oxygen_history_trend_month_text_margin_left"
                android:layout_toRightOf="@id/examples_text1"
                android:drawableLeft="@drawable/detectionhistory_ic_normal"
                android:text="@string/heart_rate"
                android:textSize="@dimen/font_measure_result_details_history_trend_text"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/oxygen_history_trend_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_press_history_effect"
                android:gravity="center"
                android:paddingLeft="@dimen/history_trend_list_padding"
                android:paddingRight="@dimen/history_trend_list_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/detectionhistory_ic_history_list"
                    android:text="@string/history_list"
                    android:textColor="@color/font_recent_history_enter"
                    android:textSize="@dimen/font_measure_result_details_history_trend_text"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pressure_history_trend_month_margin_top"
                android:layout_marginTop="@dimen/pressure_history_trend_month_margin_top" >

                <TextView
                    android:id="@+id/exmple_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/oxygen_history_trend_month_all_times"
                    android:text="@string/measure_times"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/oxygen_history_trend_month_all_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pressure_history_trend_month_margin_left"
                    android:layout_toRightOf="@+id/exmple_text1"
                    android:text="@string/total_no_data"
                    android:textColor="@color/font_history_high_priority_value"
                    android:textSize="@dimen/font_pressure_history_list_biggest" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/oxygen_history_trend_month_all_times"
                    android:layout_marginLeft="@dimen/oxygen_history_trend_month_text_margin_left"
                    android:layout_toRightOf="@+id/oxygen_history_trend_month_all_times"
                    android:text="@string/times_unit"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/oxygen_history_trend_month_all_times"
                    android:layout_toLeftOf="@+id/oxygen_history_trend_month_error_times"
                    android:text="@string/error_times"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/oxygen_history_trend_month_error_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/oxygen_history_trend_month_all_times"
                    android:layout_marginLeft="@dimen/pressure_history_trend_month_margin_left"
                    android:layout_toLeftOf="@+id/exmple_text2"
                    android:text="@string/total_no_data"
                    android:textColor="@color/font_abnormal_red"
                    android:textSize="@dimen/font_pressure_history_list_biggest" >
                </TextView>

                <TextView
                    android:id="@+id/exmple_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/oxygen_history_trend_month_error_times"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/oxygen_history_trend_month_text_margin_left"
                    android:text="@string/times_unit"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small" >
                </TextView>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_month_condition"
                android:textSize="@dimen/font_pressure_history_list_small"
                android:textStyle="bold" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pressure_history_trend_month_result_margin_top"
                android:layout_marginTop="@dimen/pressure_history_trend_month_result_margin_top"
                android:background="@drawable/item_bg_blood"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/history_trend_month_margin"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/oxygen_history_trend_month_ideal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/total_no_data"
                            android:textColor="@color/font_history_high_priority_value"
                            android:textSize="@dimen/font_pressure_history_list_biggest" >
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:gravity="bottom"
                            android:text="@string/times_unit"
                            android:textColor="@color/shadow_dark"
                            android:textSize="@dimen/font_pressure_history_list_small" >
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/nomal"
                        android:textSize="@dimen/font_pressure_history_list_small"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/divider_height"
                    android:layout_height="match_parent"
                    android:background="@color/divider_bottom" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/history_trend_month_margin"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/oxygen_history_trend_month_missing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/total_no_data"
                            android:textColor="@color/font_abnormal_red"
                            android:textSize="@dimen/font_pressure_history_list_biggest" >
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:gravity="bottom"
                            android:text="@string/times_unit"
                            android:textColor="@color/shadow_dark"
                            android:textSize="@dimen/font_pressure_history_list_small" >
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/oxygen_saturation_loss"
                        android:textSize="@dimen/font_pressure_history_list_small"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/divider_height"
                    android:layout_height="match_parent"
                    android:background="@color/divider_bottom" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/history_trend_month_margin"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/oxygen_history_trend_month_low"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/total_no_data"
                            android:textColor="@color/font_abnormal_red"
                            android:textSize="@dimen/font_pressure_history_list_biggest" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:gravity="bottom"
                            android:text="@string/times_unit"
                            android:textColor="@color/shadow_dark"
                            android:textSize="@dimen/font_pressure_history_list_small" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/hypoxemia"
                        android:textSize="@dimen/font_pressure_history_list_small"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/oxygen_history_trend_month_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/oxygen_min"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/oxygen_history_trend_month_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pressure_history_trend_month_time_margin"
                    android:layout_marginTop="@dimen/pressure_history_trend_month_time_margin"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pressure_history_trend_month_value_margin"
                    android:layout_marginTop="@dimen/pressure_history_trend_month_value_margin"
                    android:text="@string/measure_information"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/oxygen_history_trend_month_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>