<?xml version="1.0" encoding="utf-8"?>
<com.medzone.cloud.comp.widget.CustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bs_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:paddingBottom="@dimen/measure_result_value_margin" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/rela"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

           <!--      <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:alpha="@dimen/four_tenth"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_audio_measure_result_util_C" /> -->

                <TextView
                    android:id="@+id/tv_fhr_heart_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/font_history_high_priority_value"
                    android:textSize="@dimen/font_audio_measure_result_vlaue"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="@dimen/two_tenth"
                    android:text="@string/heart_rate_unit"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_audio_measure_result_util_C" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alpha="@dimen/four_tenth"
                        android:text="@string/average_fhr"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_audio_measure_result_util_C" />

                    <TextView
                        android:id="@+id/tv_fhr_avg_heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:alpha="@dimen/four_tenth"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_measure_no_data" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:alpha="@dimen/two_tenth"
                        android:text="@string/heart_rate_unit"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_audio_measure_result_util_C" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider_bottom" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:id="@+id/dynamic_polyline"
                        android:layout_width="fill_parent"
                        android:layout_height="180dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider_bottom" />

                <RelativeLayout
                    android:id="@+id/playback_progress_bar"
                    android:layout_width="fill_parent"
                    android:layout_height="53dp"
                    android:background="#F7FCFB" >

                    <ImageView
                        android:id="@+id/playback_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_fhr_start" />

                    <TextView
                        android:id="@+id/playback_current_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/playback_btn"
                        android:paddingLeft="5dp"
                        android:text="00:00" />

                    <SeekBar
                        android:id="@+id/playback_seek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/playback_total_time"
                        android:layout_toRightOf="@+id/playback_current_time"
                        android:progressDrawable="@drawable/seekbar_img"
                        android:thumb="@drawable/seekbar_thumb"
                        android:max="0"
                        android:progress="0"
                        android:thumbOffset="5dp" />

                    <TextView
                        android:id="@+id/playback_total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5dp"
                        android:text="00:00" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider_bottom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/rela"
                android:layout_marginLeft="@dimen/measure_result_value_margin"
                android:layout_marginRight="@dimen/measure_result_value_margin"
                android:layout_marginTop="20dp"
                android:background="@drawable/item_readme_bg"
                android:gravity="center" >

                <com.medzone.cloud.comp.widget.CleanableEditText
                    android:id="@+id/ce_fhr_remark"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/oxygen_result_details_readme_margin"
                    android:background="@drawable/item_et_bg"
                    android:drawableRight="@drawable/common_ic_cancle"
                    android:hint="@string/add_note"
                    android:maxLines="1"
                    android:padding="@dimen/oxygen_result_details_readme_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/font_pressure_measure_change_unit"
                    app:maxbytes="@integer/limit_measure_readme" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/measure_bottom_layout" />
    </LinearLayout>

</com.medzone.cloud.comp.widget.CustomLinearLayout>