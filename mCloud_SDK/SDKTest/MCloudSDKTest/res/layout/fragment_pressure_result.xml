<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pressure_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:paddingBottom="@dimen/measure_result_value_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/measure_result_margin_top"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/pressure_result_flag_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/testresultsview_testresult_normal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider_bottom" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/measure_result_value_high"
                android:layout_margin="@dimen/measure_result_value_margin"
                android:layout_marginBottom="@dimen/measure_result_details_value_margin_bottom"
                android:background="@drawable/item_bg_blood"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/measure_result_details_value_margin_bottom"
                    android:layout_marginRight="@dimen/measure_result_value_margin_right"
                    android:layout_weight="1.0"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/pressure_result_highTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16.0"
                        android:gravity="center"
                        android:textColor="@color/font_history_high_priority_value"
                        android:textSize="@dimen/font_measure_result_value"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pressure_result_high_unitTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pressure_unit_mmhg"
                        android:textColor="#20000000"
                        android:textSize="@dimen/font_measure_result_util" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/systolic_pressure"
                        android:textSize="@dimen/font_measure_result_util_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/measure_result_details_value_margin_bottom"
                    android:layout_marginRight="@dimen/measure_result_value_margin_right"
                    android:layout_weight="1.0"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/pressure_result_lowTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.7"
                        android:gravity="center"
                        android:textColor="@color/font_history_high_priority_value"
                        android:textSize="@dimen/font_measure_result_value"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pressure_result_low_unitTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pressure_unit_mmhg"
                        android:textColor="#20000000"
                        android:textSize="@dimen/font_measure_result_util" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diastolic_pressure"
                        android:textSize="@dimen/font_measure_result_util_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/measure_result_details_value_margin_bottom"
                    android:layout_marginRight="@dimen/measure_result_value_margin_right"
                    android:layout_weight="1.0"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/pressure_result_hplTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="5.3"
                        android:textColor="@color/font_history_low_priority_value"
                        android:textSize="@dimen/font_measure_result_value"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pressure_result_hpl_unitTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pressure_unit_mmhg"
                        android:textColor="#20000000"
                        android:textSize="@dimen/font_measure_result_util" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pulse_pressure"
                        android:textSize="@dimen/font_measure_result_util_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/oxygen_result_details_view_width"
                    android:layout_height="@dimen/oxygen_result_details_view_heigh"
                    android:layout_marginRight="@dimen/measure_result_value_margin_right"
                    android:background="@drawable/dottedline" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/measure_result_details_value_margin_bottom"
                    android:layout_weight="1.0"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/pressure_result_rateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:gravity="center"
                        android:text="16"
                        android:textColor="@color/font_history_low_priority_value"
                        android:textSize="@dimen/font_measure_result_value"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heart_rate_unit"
                        android:textColor="#20000000"
                        android:textSize="@dimen/font_measure_result_util" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heart_rate"
                        android:textSize="@dimen/font_measure_result_util_text" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/measure_result_note_high"
                android:layout_marginLeft="@dimen/measure_result_value_margin"
                android:layout_marginRight="@dimen/measure_result_value_margin"
                android:background="@drawable/item_readme_bg" >

                <EditText
                    android:id="@+id/ce_pressure_result_readme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/oxygen_result_details_readme_margin"
                    android:background="@drawable/item_et_bg"
                    android:drawableRight="@drawable/common_ic_cancle"
                    android:hint="@string/add_note"
                    android:maxLines="1"
                    android:padding="@dimen/oxygen_result_details_readme_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/font_pressure_measure_change_unit" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/measure_bottom_layout" />
    </LinearLayout>

</LinearLayout>