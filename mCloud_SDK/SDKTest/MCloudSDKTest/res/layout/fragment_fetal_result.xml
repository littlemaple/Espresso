<?xml version="1.0" encoding="utf-8"?>
<com.medzone.cloud.comp.widget.CustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bs_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:paddingBottom="@dimen/measure_result_value_margin" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/rela"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider_bottom" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/measure_result_details_time_margin_top"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <FrameLayout
                        android:id="@+id/fl_fetal_scale"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider_bottom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="@dimen/two_tenth"
                        android:text="@string/featl_time"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_measure_result_util_text" />

                    <TextView
                        android:id="@+id/tv_fm_measure_detection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:29:00"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_measure_result_util_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="@dimen/two_tenth"
                        android:text="@string/effective_fetal"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_measure_result_util_text" />

                    <TextView
                        android:id="@+id/tv_fm_effective_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20次"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_measure_result_util_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="@dimen/two_tenth"
                        android:text="@string/fetal_click"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_measure_result_util_text" />

                    <TextView
                        android:id="@+id/tv_fm_click_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40次"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_measure_result_util_text" />
                </LinearLayout>
            </LinearLayout>

            <com.medzone.cloud.comp.widget.AdaptiveTextGroup
                android:id="@+id/wrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:horizal_margin="6dp"
                app:horizal_padding="5dp"
                app:key_font_size="14"
                app:value_font_size="14"
                app:vertical_margin="2dp"
                app:vertical_padding="2dp" >
            </com.medzone.cloud.comp.widget.AdaptiveTextGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/measure_result_value_high"
                android:layout_margin="@dimen/measure_result_value_margin"
                android:background="@drawable/item_bg_blood"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_fm_avg_result_details"
                        android:layout_alignBottom="@+id/tv_fm_avg_result_details"
                        android:layout_toRightOf="@+id/tv_fm_avg_result_details"
                        android:alpha="@dimen/two_tenth"
                        android:text="@string/fetal_unit"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_audio_measure_result_util_mmol" />

                    <TextView
                        android:id="@+id/bs_result_eat_etTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_fm_avg_result_details"
                        android:layout_alignBottom="@+id/tv_fm_avg_result_details"
                        android:layout_toLeftOf="@+id/tv_fm_avg_result_details"
                        android:hint="@string/fetal_average"
                        android:textColor="@color/font_history_high_priority_value"
                        android:textSize="@dimen/font_blood_sugar_measure_result_vlaue"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_fm_avg_result_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:hint="36"
                        android:textColor="@color/font_history_high_priority_value"
                        android:textSize="@dimen/font_audio_measure_result_vlaue"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/measure_result_value_margin"
                android:layout_marginRight="@dimen/measure_result_value_margin"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_readme_bg"
                android:gravity="center" >

                <com.medzone.cloud.comp.widget.CleanableEditText
                    android:id="@+id/cet_fm_readme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/oxygen_result_details_readme_margin"
                    android:background="@drawable/item_et_bg"
                    android:drawableRight="@drawable/common_ic_cancle"
                    android:hint="@string/add_note"
                    android:maxLines="1"
                    android:padding="@dimen/oxygen_result_details_readme_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/font_pressure_measure_change_unit"
                    app:maxbytes="@integer/limit_measure_readme" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/measure_bottom_layout" />
    </LinearLayout>

</com.medzone.cloud.comp.widget.CustomLinearLayout>