<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_monthly_report_item_height"
        android:layout_marginLeft="@dimen/home_result_item_spacing"
        android:layout_marginRight="@dimen/home_result_item_spacing"
        android:layout_marginTop="@dimen/home_result_item_spacing"
        android:background="@drawable/item_bg_blood"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_result_item_top_height"
            android:layout_margin="@dimen/home_result_item_top_margin_horizal" >

            <TextView
                android:id="@+id/tv_measure_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/todo"
                android:textColor="@color/font_measuretype_atrovirens"
                android:textSize="@dimen/home_font_size_mid" />

            <TextView
                android:id="@+id/tv_measure_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/todo"
                android:textColor="@color/home_measuretime_color"
                android:textSize="@dimen/home_font_size_small" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_bottom" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/home_result_item_bottom_margin_horizal"
            android:layout_marginRight="@dimen/home_result_item_bottom_margin_horizal" >

            <ImageView
                android:id="@+id/iv_result_icon"
                android:layout_width="@dimen/home_result_icon_size"
                android:layout_height="@dimen/home_result_icon_size"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/todo"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32.0"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_unit"
                android:textColor="@color/home_measuredata_color"
                android:textSize="44sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/tv_value"
                android:text="â„ƒ"
                android:layout_marginRight="15dp"
                android:textColor="@color/home_unit_en_color"
                android:textSize="28sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>