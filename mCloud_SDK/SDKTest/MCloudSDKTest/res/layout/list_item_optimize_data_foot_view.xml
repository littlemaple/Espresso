<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_lightgrey"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/setting_top_margin_bottom" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="@dimen/regisiter_person_confirm_padding"
        android:layout_marginRight="@dimen/regisiter_person_confirm_padding"
        android:background="@drawable/selector_button_group_white"
        android:enabled="true"
        android:text="添加"
        android:textColor="@color/selector_share_black_font"
        android:textSize="@dimen/font_confirm_item" />

</LinearLayout>