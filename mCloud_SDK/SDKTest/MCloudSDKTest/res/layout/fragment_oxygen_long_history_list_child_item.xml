<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/childlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_press_light_grey_effect"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/pressure_history_list_margin"
    android:paddingRight="@dimen/pressure_history_list_margin" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pressure_history_trend_high"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/oxygen_history_list_child_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30日"
            android:textColor="@color/shadow_dark"
            android:textSize="@dimen/font_pressure_history_list_big" />

        <TextView
            android:id="@+id/exmple_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16：32"
            android:textColor="@color/shadow_dark"
            android:textSize="@dimen/font_pressure_history_list_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/oxygen_history_list_child_oxygen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="135~140"
            android:textColor="@color/font_history_high_priority_value"
            android:textSize="@dimen/font_pressure_history_list_biggest" >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/oxygen_unit"
            android:textColor="@color/shadow_dark"
            android:textSize="@dimen/font_pressure_history_list_small" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="bottom|right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/oxygen_history_list_child_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="135~140"
            android:textColor="@color/font_history_high_priority_value"
            android:textSize="@dimen/font_pressure_history_list_biggest" >
        </TextView>

        <TextView
            android:id="@+id/exmple_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/heart_rate_unit"
            android:textColor="@color/shadow_dark"
            android:textSize="@dimen/font_pressure_history_list_small" >
        </TextView>
    </LinearLayout>

</LinearLayout>