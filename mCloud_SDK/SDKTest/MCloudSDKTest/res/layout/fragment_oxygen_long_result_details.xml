<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:fadingEdge="none"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pressure_history_list_margin"
        android:layout_marginRight="@dimen/pressure_history_list_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pressure_history_list_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/oxygen_history_trend_month_chart_heigh"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/oxygen_history_trend_oxygen_line_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/oxygen_history_trend_heart_line_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/oxygen_history_trend_month_view_margin_top" >

            <TextView
                android:id="@+id/tv_saturation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/detectionhistory_ic_normal"
                android:drawablePadding="@dimen/oxygen_history_trend_month_text_margin_left"
                android:text="@string/blood_oxygen"
                android:textSize="@dimen/font_measure_result_details_history_trend_text"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/oxygen_history_trend_month_text_margin_left"
                android:layout_toRightOf="@+id/tv_saturation"
                android:drawableLeft="@drawable/detectionhistory_ic_heart_rate"
                android:drawablePadding="@dimen/oxygen_history_trend_month_text_margin_left"
                android:text="@string/heart_rate"
                android:textSize="@dimen/font_measure_result_details_history_trend_text"
                android:textStyle="bold" />

            <com.medzone.cloud.comp.widget.ZoomButton
                android:id="@+id/cb_scale_oxygen"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/long_monitoring_time"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_measure_detection_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/todo"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pressure_history_trend_month_result_margin_top"
                    android:text="@string/long_time_monitoring"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_measure_detection_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pressure_history_trend_month_result_margin_top"
                    android:text="@string/todo"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pressure_history_trend_month_result_margin_top"
                    android:text="@string/long_average_oxygen"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_measure_detection_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pressure_history_trend_month_result_margin_top"
                    android:text="@string/todo"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pressure_history_trend_month_result_margin_top"
                    android:text="@string/long_average_heart_rate"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_measure_detection_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pressure_history_trend_month_result_margin_top"
                    android:text="@string/todo"
                    android:textColor="@color/shadow_dark"
                    android:textSize="@dimen/font_pressure_history_list_small"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_more_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pressure_result_details_readmeTV"
            android:layout_marginBottom="@dimen/measure_result_value_margin"
            android:layout_marginLeft="@dimen/measure_result_value_margin"
            android:layout_marginRight="@dimen/measure_result_value_margin"
            android:layout_marginTop="@dimen/measure_result_value_margin" >

            <include layout="@layout/item_more_data" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_month_result"
                android:textSize="@dimen/font_pressure_history_list_small"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/tv_long_term_statistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/shadow_dark"
                android:textSize="@dimen/font_pressure_history_list_small" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pressure_history_trend_month_value_margin"
                android:text="@string/measure_information"
                android:textSize="@dimen/font_pressure_history_list_small"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/tv_under_80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/shadow_dark"
                android:textSize="@dimen/font_pressure_history_list_small" >
            </TextView>

            <TextView
                android:id="@+id/tv_between80_85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/shadow_dark"
                android:textSize="@dimen/font_pressure_history_list_small" >
            </TextView>

            <TextView
                android:id="@+id/tv_between85_90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/shadow_dark"
                android:textSize="@dimen/font_pressure_history_list_small" >
            </TextView>

            <TextView
                android:id="@+id/tv_between90_95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/shadow_dark"
                android:textSize="@dimen/font_pressure_history_list_small" >
            </TextView>

            <TextView
                android:id="@+id/tv_between95_99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/shadow_dark"
                android:textSize="@dimen/font_pressure_history_list_small" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/oxygen_ratio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/oxygen_history_trend_month_chart_heigh"
            android:orientation="vertical"
            android:paddingBottom="@dimen/pressure_history_list_margin"
            android:paddingTop="@dimen/pressure_history_list_margin" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>