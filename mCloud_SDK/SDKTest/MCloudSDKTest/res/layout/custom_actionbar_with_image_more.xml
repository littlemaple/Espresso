<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@drawable/title_bg"
    android:padding="0dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/selector_press_effect"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/actionbar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="8dip"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/todo" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_action_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingTop="2dip"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_action_title_size" />

        <ImageView
            android:id="@+id/actionbar_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/actionbar_margin_horizontal"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/actionbar_right_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/actionbar_margin_horizontal"
            android:background="@drawable/selector_press_effect"
            android:clickable="true"
            android:text="@string/todo"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/actionbar_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/actionbar_margin_horizontal"
            android:background="@drawable/selector_press_effect"
            android:clickable="true"
            android:contentDescription="@string/todo" >
        </ImageButton>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider_bottom" />

        <ImageButton
            android:id="@+id/actionbar_right_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/selector_press_effect"
            android:clickable="true"
            android:contentDescription="@string/todo" >
        </ImageButton>
    </LinearLayout>

    <View
        android:id="@+id/hide_view_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_five_alpha_dark"
        android:visibility="gone" />

</FrameLayout>